<h1 class="text-center">ユーザー一覧</h1>
<hr>
<% @users.each do |user|%>
  <div class="user-index-flex">
    <% if user.profile_image.present? %>
      <%= link_to user_path(user) do%>
        <%= attachment_image_tag user,:profile_image,class:'profileImage-index'%>
      <% end %>
    <%else%>
    <%= link_to user_path(user) do%>
      <%= image_tag 'noimage.png' ,class:'profileImage-index ' %>
    <% end %>
    <% end %>
    <div class="index-name">
      <%= link_to user_path(user) do%>
        <%=user.name%><br>
      <% end %>
      <small class="email-color"><%=user.email%></small> <br><br>
      <%=user.profile%>
      <p>[フォローする]</p>
    </div>
  </div>
  <hr>
<% end %>